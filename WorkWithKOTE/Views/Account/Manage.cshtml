@model WorkWithKOTE.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
}

@Styles.Render("~/Content/form")
@Styles.Render("~/Content/order")

<style>
    #logged{
        margin-left : -15px;
        font-size : 18px;
    }

    #alt_enter{
        margin-bottom : 10px;
        margin-top : 10px;
        font-size : 18px;
        font-weight : 600;
        text-decoration : underline;
    }

    #login, #password, #confirm {
        clear: both;
        text-align: right;
    }

    label, #form_tour {
        float: left;
    }
    
    #alt_enterText{
        margin-top: 20px;
        font-size : 19px;
    }

    #form_tour{
        margin-left: 11.7%;
    }

    label {
        margin-top: 12px;
        cursor: pointer;
    }

    input[type=text] {
        padding-left: 5px;
        margin-left: 10px;
    }

    input[type=password] {
        text-align: left !important;
        margin-left: 10px;
        padding-left: 5px;
    }

    .field-validation-error > span {
        display: block;
    }

    #changePassword,.alternateBnt,#removeAlt{
      padding: 3px;
      color: white !important;
      border-radius : 4px;
      background-color : #ff6f40;
      border : 1px solid #ff6f40;
      color : white;
      height : 27px;
      cursor : pointer;
    }

    .message-success{
        font-size : 18px;
        margin-left : -17px;
        font-weight : 600;
        margin-bottom: 10px;
    }

    #servise{
        font-size : 19px;
    }

    #socialLoginList{
        margin-bottom : 20px;
    }

    #changePassword{
        margin-top : 10px;
    }

    #Vkontakte{
       border-radius: 4px;
       height: 33.5px;
       font-size: 14px;
       background : #6383a8 no-repeat;
       background-image : url("/Content/img/vk.png");     
       color : white;
       width : 212px;
       text-align : right;
       border : 1px solid #6383a8;
       margin-top : 5px;
    }

    #facebook{
       margin-top : 5px;
       border-radius: 4px;
       height: 33.5px;
       font-size: 14px;
       background : #6383a8 no-repeat;
       background-image : url("/Content/img/facebook.png");     
       color : white;
       width : 202px;
       text-align : right;
       border : 1px solid #6383a8;    
    }

</style>

@{ Html.RenderPartial("HeaderPartial_main");}

<div id="small-preview-img" class="clearfix">
    <hgroup>
        <h1>Изменение пароля</h1>
        <h2>@Html.ActionLink("Главная", "Index", "Home", null, null) / Изменение пароля </h2>
    </hgroup>
</div>


<div class="container">
    <div id="form_tour">

        <div class="message-success">@ViewBag.StatusMessage</div>

        <div id="logged">
            Вы зарегистрированы как
            <strong>@User.Identity.Name</strong>
        </div>

        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

        <div id="externalLogins">
            @Html.Action("RemoveExternalLogins")

            <div id="alt_enterText">Используйте альтернативный вход</div>
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
        </div>
     </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
