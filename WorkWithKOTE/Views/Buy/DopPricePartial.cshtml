@model IEnumerable<WorkWithKOTE.Models.DopUslug>
@{
    Layout = null;
}
<div id="options">
    @foreach (var item in Model)
    {
      if(item.Price != 0) 
      { <div>
            @item.Name
          @*  @Html.CheckBox(iteam.Name, new { price = iteam.Price })*@
        <input type="checkbox"  name="Item" value="@item.DopUslugId" id="ItemChecked" price="@item.Price" onclick="Check()" />
        </div>
      }
    }
</div>
    <script type="text/javascript">
        var sum0 = parseFloat($("#Prices").val());
   function sumFunction() {
        var sum = sum0;
        $('#options input[type=checkbox]:checked').each(function (i, v) {
            sum += parseFloat($(v).attr('price'));
        });
        $("#Prices").val(sum);
        $('#Price').val(sum);
   };
   function Check() {
       if (document.getElementById('ItemChecked').checked) {
           sumFunction();
       }
       else {
           sumFunction();
       }
   }
    </script>
