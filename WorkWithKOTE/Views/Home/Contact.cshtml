@{
    ViewBag.Title = "Contact";
}
@Styles.Render("~/Content/order")

<style>

    #blockPhones,#blockSocial,.main{
        margin-left : 35px;
        margin-top  : 10px;
        margin-bottom : 10px;
    }

    #introBlock{
        margin-top : 20px;
        text-align : center;
    }

    #mainBlock{
        margin-top : 20px;
        text-align : left;
    }

    .phones,.social{
        display : block;
        margin : 5px;
    }

    .social{
        font-size : 20px;
    }

    .kote{
        color : #ff6f40;
    }

    #preKote{
         font-size : 19px;
    }

    #yearsOld,#suggest{
        text-decoration : underline;
        font-weight : 500;
    }

    #intro{
        font-size : 17px;
    }

    #suggest{
        font-size : 19px;
    }

    .subMain{
        margin-left : 13px;
    }

    .photoDoc{
        width : 300px;
        height : 400px;
    }

    .dogovor{
        font-size : 18px;
        display : block;
    }

    #downloads,#photoDoc,#ourContacts{
        margin-left : 48px;
    }

    .photoDoc{
        display : inline;
    }

    #contacted{
        text-decoration:underline;
        margin-left : 10px;
        margin-top : 30px;
        padding-top : 20px;
    }

    #ourContacts{
        width : 80%;
        box-shadow: 1px 1px 2px 1px #ccc;
    }

    #call,#office{
        margin-left : 35px;
    }

</style>

@{ Html.RenderPartial("HeaderPartial_main");}

