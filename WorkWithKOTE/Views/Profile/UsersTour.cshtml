@model IEnumerable< WorkWithKOTE.Models.Trip>
<div class="layout">
    <h3> Заявки</h3>
    <table id="requests">
        @foreach (var Item in Model) {         
            <tr>
            <th>@Item.TripID<br>заказа</th>
            <th>@Item.Name @Item.Surname @Item.FatherName</th>
            <th>@Item.Tour.NameTour</th>
            <th>@Item.DateTour.FirstDate.ToString("dd.MM.yyyy")  -  @Item.DateTour.SecondDate.ToString("dd.MM.yyyy")</th>
            <th>@Item.TourPrice</th>
            <th>@Item.Status<br>заказа</th>
        </tr>
        }
    </table>

</div>