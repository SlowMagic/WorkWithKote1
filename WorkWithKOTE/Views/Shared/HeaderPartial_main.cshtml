@using WorkWithKOTE.Code
<style>

    #forMenu{
        cursor : pointer;
    }

    .selectize.whereCopy  {
        display: inline-block;
        width: 47%;
        height: 40px;
        background: #656d78;
        color: #e6e9ed;
        line-height: 17px;
        font-size: 16px;
        border: 1px solid #3e4753;
        margin-left: 17px;
    }

       .selectize-control.selectize.whereCopy > .selectize-input {
        margin: 5px 0px -14px 0px;
        background: none;
        border: none;
        padding: 0px;
        width: 90%;
    }

    .selectize-control.selectize.whereCopy > .selectize-input.focus {
        background: none;
        border: none;
        color: #e6e9ed;
        box-shadow: none;
    }
   .selectize-control.selectize.whereCopy > .selectize-input.full {
        background: none;
        border: none;
        color: #e6e9ed;
    }
    .selectize-control.selectize.whereCopy > .selectize-input input {
