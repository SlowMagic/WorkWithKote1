        font-size: 16px;
        background: none !important;
        box-shadow: none !important;
    }

    .selectize-control.selectize.whereCopy > .selectize-input input ::-webkit-input-placeholder {
        color: #e6e9ed;
        line-height: 14px;
        font-size: 16px;
    }

