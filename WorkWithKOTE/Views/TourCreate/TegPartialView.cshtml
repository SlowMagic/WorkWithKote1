<div id="tag-pannel">
    <div class="teg">
        <span id="turTag">Тег тура  : </span>
        <input type="text" name="Tag[0].TagName" /><br />
    </div>
</div><br/>

    <input type="button" class="addTeg tags" value=" Добавить тег тура ">
    <input type="button" class="deleteLinkTag tags" value="Удалить тег тура" />

<script>
    var l = 1;

    $(function ()
    {
        $('.addTeg').click(function ()
        {
            var html2Addss = "<div style='margin-left:45px;' class='tag" + l + "'>" +
                               "<h4>Тег тура №" + l + "</h4>" +
                               "<input type='text' name='Tag[" + l + "].TagName' /><br/>" +
                             "</div>";
            $('#tag-pannel').append(html2Addss);
            l++;
        });
    });

    $(function ()
    {
        $('.deleteLinkTag').click(function ()
        {
            var count = l - 1;
            $('.tag' + count).remove();

            if (l != 0) {
                l--;
            }
        });
    });
</script>