                                        if (item.IsTrain && T == 0)
                                        {
                                            @Html.CheckBox("IsTrain")
                                            <label for="IsTrain">Поезд</label>
                                            T++;
                                        }

                                        if (item.IsAriplane && A == 0)
                                        {
                                            @Html.CheckBox("IsAriplane")
