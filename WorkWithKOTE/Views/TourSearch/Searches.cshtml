                    <input style="display:none;" id="maxPrice" type="text" name="MaxValue" value="@ViewBag.MaxValue" />
                    <div id="slider-range"></div>
                    <input type="text" id="showPrice" value="@ViewBag.MinValue - @ViewBag.MaxValue" readonly="readonly" />

                    <input type="submit" value="Искать" />
                </div>

                @* @Html.DropDownList("Places", DropDown.Places(), "Любое направление")*@

            </form>
        </div><br /><br />
        <div class="layout-main-right">
            <div class="found-tour">
                @{
                    int index = 0;
                    bool flag = true;
                }
                @{ int max = Model.Count(); }
